 @{
    ViewData["Title"] = "Movies";
}

@model List<MovieFormResponse>

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Form Id</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
            <td>Category</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
        <tr>
            <td>@x.FormId</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.Notes</td>
            <td>@x.Category.Categories</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.FormId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.FormId">Delete</a></td>

        </tr>
            } 
       
    </tbody>

</table>